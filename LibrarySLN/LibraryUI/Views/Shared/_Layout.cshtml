<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top myMenu">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Library", "Index", "Home", new { area = "" }, new { @class = "navbar-brand menuItem" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("Cart", "Index", null,
                       new { area = "" }, htmlAttributes: new { id = "basketLink" })
                    </li>
                    <li>
                        @Html.ActionLink("Register Email", "Register", null,
                       new { area = "" }, htmlAttributes: new { id = "registerLink" })
                    </li>
                    <li>
                        @Html.ActionLink("Reader", "Index", null,
                       new { area = "" }, htmlAttributes: new { id = "activeLink" })
                    </li>
                    <li>
                        @Html.ActionLink("Librarian", "Index", "Dashboard",
                   new { area = "Admin" }, htmlAttributes: new { id = "adminLink" })
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script>
        'use strict';
        $(document).ready(function () {
            $('#FilterType, #SortType').change(function () {
                $('#filterForm').submit();
            });
        });
    </script>

</body>
</html>