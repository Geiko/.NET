@model TestShipping.Models.ShippingViewModel
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Shippings";
}

<div class="form-inline">
    <span style="font-size: 30px; margin:0 15px 0 0;">Shippings</span>

    @Html.ActionLink("Create New", "Create") 

    <button id="return" class="btn btn-default" style="margin:0 15px;">Back</button> 

    <input type="submit" value="Filter" class="btn btn-success" form="filterForm" /> 

    <span style="margin:0 15px;">@Html.ActionLink("Export XLS-file", "ExportToExcel")</span>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "filterForm" }))
{
    <div class="form-inline" style="margin: 15px 0;">

        <div class="form-group" style="margin:0 15px 0 0">
            <label>Month:</label><br />
            @Html.DropDownList(
               "month",
               Model.Month as SelectList,
               Model.SelectedMonthFilter,
               htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="form-group" style="margin:0 15px 0 0">
            <label>Depatchure City:</label><br />
            @Html.DropDownList(
               "departureCity",
               Model.DepartureCities as SelectList,
               Model.SelectedDepartureFilter,
               htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="form-group" style="margin:0 15px 0 0">
            <label>Purpose City:</label><br />
            @Html.DropDownList(
               "purposeCity",
               Model.PurposeCities as SelectList,
               Model.SelectedPurposeFilter,
               htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="form-group" style="margin:0 15px 0 0">
            <label>Customer:</label><br />
            @Html.DropDownList(
                "customer",
                Model.Customers as SelectList,
                Model.SelectedCustomerFilter,
                htmlAttributes: new { @class = "form-control" }
            )
        </div>

        <div class="form-group" style="margin:0 15px 0 0">
            <label>Carrier:</label><br />
            @Html.DropDownList(
               "carrier",
               Model.Carriers as SelectList,
               Model.SelectedCarrierFilter,
               htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
}

